<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="fish"
            type="com.dispy.acnhdemo.model.bean.Fish" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageFish"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_marginTop="32dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="H,2:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:loadUrl="@{fish.imageURI}" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listFishDetail"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="@+id/imageFish"
            app:layout_constraintStart_toStartOf="@+id/imageFish"
            app:layout_constraintTop_toBottomOf="@+id/imageFish" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>